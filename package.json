{
  "name": "e-commerce-store-builder",
  "version": "1.0.0",
  "description": "Backend for E-Commerce Store Builder with CRUD operations for products and blog, registration and authentication, product sorting, user dashboard, shopping cart, product and blog article search, purchase management, and feedback handling.",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run build:ts && tsc -p test/tsconfig.json && tap --ts \"test/**/*.test.ts\"",
    "start": "npm run build:ts && fastify start -l info dist/app.js",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
    "lint": "npx eslint src test --fix",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "keywords": [
    "e-commerce",
    "store builder",
    "backend",
    "CRUD operations",
    "product management",
    "blog management",
    "registration",
    "authentication",
    "product sorting",
    "user dashboard",
    "shopping cart",
    "product search",
    "blog article search",
    "purchase management",
    "feedback management"
  ],
  "author": "Oleh Husak (https://github.com/oleh19127)",
  "license": "ISC",
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "@fastify/autoload": "^5.8.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/sensible": "^5.5.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^1.10.1",
    "bcrypt": "^5.1.1",
    "fastify": "^4.24.3",
    "fastify-cli": "^5.8.0",
    "fastify-plugin": "^4.5.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.8",
    "@types/tap": "^15.0.10",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "fastify-tsconfig": "^2.0.0",
    "prettier": "^3.0.3",
    "tap": "^16.3.9",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "husky": "^8.0.3"
  }
}
