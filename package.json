{
  "name": "e-commerce-store-builder",
  "version": "1.0.0",
  "description": "Backend for E-Commerce Store Builder with CRUD operations for products and blog, registration and authentication, product sorting, user dashboard, shopping cart, product and blog article search, purchase management, and feedback handling.",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run build:ts && tsc -p test/tsconfig.json && tap \"test/**/*.test.ts\"",
    "start": "npm run build:ts && fastify start -l info dist/app.js",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
    "lint": "npx eslint src test --fix",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "keywords": [
    "e-commerce",
    "store builder",
    "backend",
    "CRUD operations",
    "product management",
    "blog management",
    "registration",
    "authentication",
    "product sorting",
    "user dashboard",
    "shopping cart",
    "product search",
    "blog article search",
    "purchase management",
    "feedback management"
  ],
  "author": "Oleh Husak (https://github.com/oleh19127)",
  "license": "ISC",
  "engines": {
    "node": "18.x"
  },
  "dependencies": {
    "@fastify/autoload": "^5.8.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/sensible": "^5.5.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "bcrypt": "^5.1.1",
    "fastify": "^4.26.0",
    "fastify-cli": "^6.1.0",
    "fastify-plugin": "^4.5.1",
    "husky": "^9.0.10",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fastify-tsconfig": "^2.0.0",
    "prettier": "^3.2.5",
    "tap": "^18.7.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  }
}
